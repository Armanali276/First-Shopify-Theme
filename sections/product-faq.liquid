{% assign faqs = product.metafields.custom.product_faqs_qa.value %}
  <div class="product-faqs page-width">
    <h2>Frequently Asked Questions</h2>
    <div class="faqs-inner">
      {% for faq in faqs %}
        <details {% if forloop.first %}open{% endif %}>
          <summary>
            <h3 class="faq-question">{{ faq.question.value }}</h3>
            {% render 'icon-caret' %}
          </summary>
          <div class="content">
            {{ faq.response | metafield_tag }}
          </div>
        </details>
      {% endfor %}
    </div>
  </div>
  
{% schema %}
    {
        "presets": [
            {
                "name": "Product Faqs"
            }
        ]
    }
{% endschema %}